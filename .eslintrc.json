{
  "plugins": ["eslint-plugin-prettier"],
  "extends": ["next/core-web-vitals", "eslint-config-prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": false,
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "semi": true,
        "useTabs": false,
        "arrowParens": "always",
        "endOfLine": "auto",
        "htmlWhitespaceSensitivity": "css",
        "printWidth": 80,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "semi-style": ["error", "last"]
      }
    ]
  }
}
